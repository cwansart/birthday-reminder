<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tb="http://www.hardcodet.net/taskbar"
                    xmlns:local="clr-namespace:birthday_reminder">
    <ContextMenu x:Shared="false" x:Key="SysTrayMenu">
        <MenuItem Header="Show BirthdayReminder" Command="{Binding ShowWindowCommand}" />
        <MenuItem Header="Hide BirthdayReminder" Command="{Binding HideWindowCommand}" />
        <Separator />
        <MenuItem Header="Exit" Command="{Binding ExitApplicationCommand}" />
    </ContextMenu>

    <!-- The application's NotifyIcon-->
    <tb:TaskbarIcon x:Key="NotifyIcon"
                    IconSource="/cake.ico"
                    ToolTipText="BirthdayReminder"
                    DoubleClickCommand="{Binding ShowWindowCommand}"
                    ContextMenu="{StaticResource SysTrayMenu}">

        <!-- self-assign a data context -->
        <tb:TaskbarIcon.DataContext>
            <local:NotifyIconViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>
</ResourceDictionary>